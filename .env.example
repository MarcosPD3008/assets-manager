# ============================================
# Environment Configuration
# ============================================
# Copia este archivo como .env para desarrollo local.
# Para producción con Docker, copia como .env.deploy y ajusta los valores.

# ─── PostgreSQL (servicio Docker) ─────────────────────────────────────────────
POSTGRES_DB=nest_monorepo
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# ─── Base de datos (app) ──────────────────────────────────────────────────────
# En Docker, DB_HOST se sobreescribe automáticamente con el nombre del servicio.
DB_HOST=localhost
DB_PORT=54321
DB_USERNAME=postgres
DB_PASSWORD=password
DB_DATABASE=nest_monorepo

# ─── Aplicación ───────────────────────────────────────────────────────────────
NODE_ENV=development
PORT=3100

# ─── Puertos del host (Docker) ────────────────────────────────────────────────
POSTGRES_HOST_PORT=54321
API_HOST_PORT=3100
WEB_HOST_PORT=8090
POSTGRES_VOLUME_NAME=assets_manager_postgres_data

# JWT (si se implementa autenticación)
JWT_SECRET=your-secret-key-here
JWT_EXPIRES_IN=24h

# Redis (opcional para cache/sessions)
REDIS_HOST=localhost
REDIS_PORT=6379

# Email (opcional para notificaciones)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Logging
LOG_LEVEL=info

# CORS (lista separada por comas, usa * en local si lo necesitas)
CORS_ORIGIN=http://localhost:4200

# Notifications scheduler + queue
NOTIFICATION_QUEUE_DRIVER=pgboss
NOTIFICATION_CRON_ENABLED=true
NOTIFICATION_CRON_EXPRESSION=*/5 * * * *
NOTIFICATION_WORKER_ENABLED=true
NOTIFICATION_MAX_ATTEMPTS=5
NOTIFICATION_RETRY_BACKOFF=true
NOTIFICATION_DLQ_NAME=notifications.dead-letter
NOTIFICATION_ACTIVE_CHANNELS=IN_APP
APP_TIMEZONE=UTC
